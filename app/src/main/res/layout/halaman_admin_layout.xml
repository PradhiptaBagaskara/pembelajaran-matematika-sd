<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/leyot"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:context=".Halaman_Admin">

    <Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:visibility="visible"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:title="@string/app_name"
        android:titleTextColor="@android:color/white"
        android:titleMarginStart="20dp"/>

    <TextView
        android:layout_marginTop="120dp"
        android:layout_below="@id/toolbar"
        android:text="Selamat Datang"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btartikel"
            android:text="Edukasi"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:background="@drawable/ic_artikel_button"
            android:textColor="@color/colorPrimary"
            android:layout_width="300dp"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/btvideo"
            android:text="Video"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:background="@drawable/ic_artikel_button"
            android:textColor="@color/colorPrimary"
            android:layout_width="300dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btforum"
            android:text="Chatt Room"
            android:visibility="gone"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:background="@drawable/ic_artikel_button"
            android:textColor="@color/colorPrimary"
            android:layout_width="300dp"
            android:layout_height="50dp" />
    </LinearLayout>


</RelativeLayout>