<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_pesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/userProfile_chat"
                    android:src="@drawable/ic_person"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/ic_user_photo_bg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>

                <LinearLayout
                    android:id="@+id/kotak_pesan"
                    android:orientation="vertical"
                    android:background="@drawable/ic_message_bg"
                    android:padding="10dp"
                    android:layout_marginStart="80dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/layout_nick"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/userName_Chat"
                            android:text="UserName"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/icon_verified"
                            android:src="@drawable/centang"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_vertical"
                            android:visibility="gone"
                            android:layout_width="18dp"
                            android:layout_height="18dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/message_user"
                        android:text="new message new message "
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/time_chat"
                        android:text="send at : 22 Dec 2019"
                        android:textSize="10sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>